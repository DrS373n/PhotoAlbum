<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:PhotoAlbum.App.Controls">

    <Style TargetType="controls:DropZoneControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:DropZoneControl">
                    <Border x:Name="PART_Border"
                            BorderBrush="{StaticResource DropZoneBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="2"
                            Background="#10000000">
                        <Grid>
                            <!-- Photo Image -->
                            <Image x:Name="PART_PhotoImage"
                                   Stretch="UniformToFill"
                                   Visibility="Collapsed"/>
                            
                            <!-- Placeholder when empty -->
                            <Border x:Name="PART_Placeholder"
                                    Background="Transparent">
                                <Grid>
                                    <FontIcon Glyph="&#xE91B;"
                                             FontSize="48"
                                             Foreground="#40000000"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="Drop Photo Here"
                                              FontSize="12"
                                              Foreground="#80000000"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Bottom"
                                              Margin="0,0,0,8"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
